{
  "name": "mrujs",
  "version": "0.0.1",
  "description": "UJS for modern javascript. mrujs stands for Modern Rails UJS",
  "source": "src/index.js",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "exports": "./dist/index.modern.js",
  "repository": "git@github.com:ParamagicDev/mrujs.git",
  "author": "ParamagicDev <konnor5456@gmail.com>",
  "license": "MIT",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "lint": "eslint --ext .js,.html ./src --ignore-path .gitignore && prettier \"./{src,demo}/**/*.js\" --check --ignore-path .gitignore",
    "format": "eslint --ext .js,.html ./src --fix --ignore-path .gitignore && prettier \"./{src,demo}/**/*.js\" --write --ignore-path .gitignore",
    "test": "web-test-runner",
    "test:watch": "web-test-runner --watch",
    "start": "web-dev-server",
    "start:watch": "web-dev-server --watch",
    "build": "microbundle",
    "build:watch": "yarn build watch"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.0",
    "@open-wc/eslint-config": "^4.2.0",
    "@web/dev-server": "^0.1.8",
    "@web/test-runner": "^0.12.15",
    "@web/test-runner-playwright": "^0.8.4",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-lit": "^1.3.0",
    "eslint-plugin-lit-a11y": "^1.0.1",
    "eslint-plugin-wc": "^1.3.0",
    "microbundle": "^0.13.0",
    "prettier": "^2.2.1",
    "sinon": "^9.2.4"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 9
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  }
}
